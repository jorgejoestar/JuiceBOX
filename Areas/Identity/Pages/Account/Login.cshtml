@page

@model Webshop.Models.UserViewModel
@{
    ViewData["Title"] = "Log in";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post">
                <h4>Login with your created account</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group-layout">


                    <div class="form-group">

                        <input asp-for="UserName" placeholder="Username" class="form-control"/>

                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">

                        <input asp-for="Password" class="form-control" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <button type="submit" class="btn btn-default">Log in</button>
                    </div>
                    <div class="form-group">

                        <p>
                            <a asp-page="./Register">Register as a new user</a>
                        </p>
                    </div>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section></section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
